//sum and largest number of n numbers
#include<stdio.h>
#include<conio.h>
main()
{
int n,i,sum=0,a[100],p;
clrscr();
printf("enter number of values you want:");
scanf("%d",&n);
printf("enter values:");
for(i=0;i<n;i++)
scanf("%d",&a[i]);
p=a[0];
for(i=0;i<n;i++)
{
sum=sum+a[i];
if(p<a[i])
p=a[i];
}
printf("sum=%d",sum);
printf("\nlargest number=%d",p);
getch();
return 0;
}

